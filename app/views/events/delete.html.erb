
<style type="text/css">
  body {background-image: url(/assets/Event.png); background-size:1920px 950px;}
  #container{width:1920px; margin-right:auto; margin-left:auto}
  .event_delete{padding-left: 120px; padding-top:100px; font-size:55px}
  .event_form{padding-left: 25px; padding-top:0px; font-size:25px}
  .form-buttons{padding-left: 275px; padding-top:50px;}
</style>

<body>
<div id = "container"> 
  <div class="event_delete">
    <h2>Delete event</h2>

    <%= form_for(@event, :method => 'delete') do |f| %>
    <div class="event_form"> 
      <p>You sure you want to delete the event?</p>
    </div>      
  </div>
    <div class="form-buttons">
      <%= f.submit("Delete event") %>
      <%= link_to("Back", events_path, :class => 'back-link') %>
    </div>

    <% end %>
</div>
</body>