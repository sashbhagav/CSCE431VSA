  
<%= link_to("<< Back to Home", events_path, :class => 'back-link') %>
<%= image_tag ("vsa.png") %>
<div class="event show">
  <h2>Add an event</h2>

<%= form_for(@event, :url => events_path, :method => 'post') do |e| %>
  <table summary="event form">
    <tr>
      <th>Event</th>
      <td><%= e.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= e.text_field(:description) %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= e.text_field(:location) %></td>
    </tr>
    <tr>
      <th>Time</th>
      <td><%= e.text_field(:time) %></td>
    </tr>
    <tr>
      <th>Points</th>
      <td><%= e.text_field(:points) %></td>
    </tr>

  </table>

  <div class = "form-buttons">
    <%= e.submit("Add Event")%>
    </div>
<% end %>
</div>