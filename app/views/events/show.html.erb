

<style type="text/css">
  body {background-image: url(/assets/Event.png); background-size:1920px 950px;}
  #container{width:1920px; margin-right:auto; margin-left:auto}
  .book_show{padding-left: 120px; padding-top:100px; font-size:55px}
  .event_form{padding-left: 25px; padding-top:0px; font-size:25px}
  .form-buttons{padding-left: 275px; padding-top:50px;font-size:25px}
</style>
<body>
<div id = "container">
  <div class="book_show">
    <!--<h5>Details about '<%= @event.name %>'</h5>-->
    <h5> Event Details</h5>

    <table class= "event_form" summary="book detail view">
      <tr>
        <th>Name</th>
        <td><%= @event.name %></td>
      </tr>
      <tr>
        <th>Decscription</th>
        <td><%= @event.description %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= @event.location %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= @event&.date&.strftime('%B %e, %Y') %></td>
      </tr>
      <tr>
        <th>Time</th>
        <td><%= @event.time %></td>
      </tr>
      <tr>
        <th>Points</th>
        <td><%= @event.points %></td>
      </tr>
      <tr>
        <th>Link</th>
        <td><%= @event.link %></td>
      </tr>
    </table>
  </div>

  <div class="form-buttons">
    <%= link_to("Back", events_path, :class => 'back-link') %>
  </div>
</div>
</body>