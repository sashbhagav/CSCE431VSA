<p id="notice"><%= notice %></p>

<h1>Households</h1>
<%= link_to("<< Back to Home", events_path, :class => 'back-link') %>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First</th>
          <th>Last</th>
          <th>Uin</th>
          <th>Family</th>
          <th>Email</th>
          <th>Phonenumber</th>
          <th>Classification</th>
          <th>Major</th>
          <th>Points</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @households.each do |household| %>
          <tr>
            <td><%= household.first %></td>
            <td><%= household.last %></td>
            <td><%= household.UIN %></td>
            <td><%= household.family %></td>
            <td><%= household.email %></td>
            <td><%= household.phonenumber %></td>
            <td><%= household.classification %></td>
            <td><%= household.major %></td>
            <td><%= household.points %></td>
            <td><%= link_to 'Show', household %></td>
            <td><%= link_to 'Edit', edit_household_path(household) %></td>
            <td><%= link_to 'Destroy', household, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<h3>Import Members</h3>
<div class = import>
  <%= form_tag import_households_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Members"%>
  <% end %>
</div>
<%= link_to 'Add a New Member', new_household_path %>
