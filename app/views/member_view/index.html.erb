<style type="text/css">
  body {background-image: url(/assets/EventView.png); background-size:1920px 950px;}
  .events_index{padding-left: 80px; text-align:center}
  .listing{padding-left: 685px}
  .media{padding-left: 80px; text-align:center}
  .table_table_hover{padding-left: 685px}
  .PieChart{text-align:center}
</style>
<br />
<div class = "form-buttons" text-align = "right">
  <%= button_to("Administrator Login", { :action => "login" }, :method => :get, :class => 'login new') %>
</div>
<body>
<%= javascript_include_tag 'application' %>

<div class= "events index">
  <%= image_tag ("vsa.png") %>
  <h2>VSA Events</h2>
  <p>View all the events in our club CICD test Heroku</p>
    <table class="listing" summary="events list">
      <tr class="header">
        <th>Events</th>
        <th>Description</th>
        <th>Location</th>
        <th>Time</th>
        <th>Points</th>

      </tr>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= event.points %></td>
          <td class="actions">
          <%= link_to("Details", event_path(event), :class => 'action show') %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  
  <br />
  <br />

  <h2>VSA Points</h2>
  <div class="media">
    <div class="media-body">
      <table class="table_table_hover">
        <thead>
          <tr>
            <th>First</th>
            <th>Last</th>
            <th>Family</th>
            <th>Points</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @households.each do |household| %>
            <tr>
              <td><%= household.first %></td>
              <td><%= household.last %></td>
              <td><%= household.family %></td>
              <td><%= household.points %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br />

  <div class="PieChart">
    <%= pie_chart Household.group(:family).sum(:points) %>
  </div>

  <br />
    
</body>

