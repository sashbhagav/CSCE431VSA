<style type="text/css">
  body {background-image: url(/assets/EventView.png); background-size:1920px 950px;}
  .events_index{padding-left: 80px; text-align:center}
  .listing{padding-left: 685px}
  .Logos{text-align:center; padding-left: 65px; margin: 5px 5px 5px 5px}
  .media{padding-left: 80px; text-align:center}
  .table_table_hover{padding-left: 820px}
  .PieChart{text-align:center}
</style>
<br />
<div class = "form-buttons" text-align = "right">
  <%= button_to("Administrator Login", { :action => "login" }, :method => :get, :class => 'login new') %>
</div>
<body>
  <%= stylesheet_link_tag "table" %>
  <%= javascript_include_tag 'test' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<div class= "events_index">
  <%= image_tag ("vsa.png") %>
  <h2>VSA Events</h2>
  <p>View all of the Events in our club</p>
    <table class="center">
      <tr class="header">
        <th>Events</th>
        <th>Description</th>
        <th>Location</th>
        <th> Date </th>
        <th>Time</th>
        <th>Points</th>
        <th>Link</th>

      </tr>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event&.date&.strftime('%B %e, %Y') %></td>
        <td><%= event.time %></td>
        <td><%= event.points %></td>
        <td><%= event.link %></td>
          <td class="actions">
          <%= link_to("Details", event_path(event), :class => 'action show') %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="media">
  <h2>VSA Points</h2>
    <div class="media-body">
      <table role="datatable"class="table_table_hover">
        <thead>
          <tr>
            <th>First</th>
            <th>Last</th>
            <th>Family</th>
            <th>Points</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @households.each do |household| %>
            <tr>
              <td><%= household.first %></td>
              <td><%= household.last %></td>
              <td><%= household.family %></td>
              <td><%= household.points %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br />

  <div class="PieChart">
    <%= pie_chart Household.group(:family).sum(:points) %>
  </div>

  <div class="Logos">
    <a href="https://www.facebook.com/groups/vasa.tamu" target="_blank"> <%= image_tag ("FacbookLogo.png") %> </a>
    <a href="https://www.instagram.com/tamuvsa/" target="_blank"> <%= image_tag ("InstagramLogo.png") %> </a>
    <a href="https://linktr.ee/tamuvsa" target="_blank"> <%= image_tag ("LinkTreeLogo.png") %> </a>
  </div>

  <br />

</body>
